<% if current_user.admin? %>
    <h1>Admin/Index</h1>
    <%= link_to 'New User', new_admin_user_path %>
    <table border="1">
        <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= user.firstname %></td>
              <td><%= user.lastname %></td>
              <td><%= link_to 'edit', edit_admin_user_path(user) %></td>
              <td><%= link_to 'delete', admin_user_path(user), method: :delete, data: {confirm: 'You sure?'} %></td>
            </tr>
        <% end %>
    </table>
<% else %>
    <h1>No Access</h1>
<% end %>